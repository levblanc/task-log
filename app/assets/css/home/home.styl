@import 'nib'

.welcomePanel
    height 100%
    background-image: linear-gradient(-180deg, #5298fc 66%, #2392ff 100%);
    .createUser, .chooseUser
        max-width 600px
        margin 0 auto
        padding-top 10%
        color #fff
        text-align center
    .nameInput
        input
            width 250px
            height 45px
            line-height 45px
            font-size 22px
            text-align center
            background none
            outline none
            border none
            border-bottom 1px solid #fff
        ::-webkit-input-placeholder
            color rgba(#fff, 0.8)
    .userBtn
        display block
        max-width 150px
        padding 10px 0
        margin 10px auto
        &:hover
            color #5298fc
            font-size 22px
            font-weight bold
            background-color #fff
            border-radius 5px
            transition all 0.5s ease

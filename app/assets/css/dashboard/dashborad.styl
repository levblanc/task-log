@import 'nib'

.dashboard
    height 100%
    .header
        clearfix()
        height 48px
        line-height 48px
        color #fff
        font-size 20px
        background-color #5a6b77
        border-bottom 1px solid #485761
        text-align center
        .userName
            padding 0 20px
            font-size 16px
            float right
    .dashboardContent
        clearfix()
        max-width 1000px
        margin 3% auto 0
    .createMonthLog
        width 25%
        position relative
        float right
    .createNewLog
        display block
        width 80%
        padding 5px 0
        margin 0 auto
        color #5298F7
        text-align center
        background-color #f9fcff
        position relative
        z-index 10
        border 1px solid #dddee0
        border-radius 5px
        &.showMonthInput
            border-radius 0
            border-top-left-radius 5px
            border-top-right-radius 5px
        &:hover
            cursor pointer
            color #fff
            border 1px solid #fff
            background-color rgba(#5298fc, 0.8)
    .monthInput
        width 80%
        margin 0 auto
        border 1px solid #5298fc
        border-top none
        border-bottom-left-radius 5px
        border-bottom-right-radius 5px
        absolute 100% 0
        margin-top -1px
        margin-left calc(10% - 1px)
        .inputBox
            clearfix()
            padding 10px 10px
            color #fff
            background-color #5298fc
        .currentYear
            width 30%
            float left
        input
            width 70%
            height 25px
            line-height @height
            font-size 16px
            color #fff
            text-align center
            outline none
            background none
            border none
            border-bottom 1px solid #fff
            float left
        ::-webkit-input-placeholder
            color rgba(#fff, 0.8)
        .cancelBtn
            display block
            padding 8px 0
            color #b0b8bf
            text-align center
            font-size 14px
    .userLogList
        width 60%
        text-align center
        border 1px solid #dddee0
        border-radius 5px
        float right
        .note
            color #5a6b77
            padding 5px 0
            border-bottom 1px solid #dddee0
        li
            color #5298F7
            list-style none
            padding 10px 0
            transition all 0.3s ease
            &:nth-child(even)
                background-color #f9fcff
            &:hover
                cursor pointer
                color #fff
                background-color rgba(#5298fc, 0.8)
